  <toolbar name="toolbar1">
    <placeholder name="brush-settings-toolitems">
      <toolitem action="ColorMenuToolButton"/>
      <toolitem action="BrushMenuToolButton"/>
    </placeholder>

    <placeholder name="file-toolitems">
      <separator/>
    <!--
      <toolitem action="New"/>
      <toolitem action="Open"/>
      <toolitem action="Save"/>
    -->
      <toolitem action="Undo"/>
      <toolitem action="Redo"/>
    </placeholder>

    <placeholder name="view-toolitems">
      <separator/>
      <toolitem action="ResetView"/>
      <toolitem action="ZoomIn"/>
      <toolitem action="ZoomOut"/>
      <toolitem action="RotateLeft"/>
      <toolitem action="RotateRight"/>
      <toolitem action="MirrorVertical"/>
      <toolitem action="MirrorHorizontal"/>
    </placeholder>

    <placeholder action="toolset-toolitems">
      <separator expand="true" name="expander"/>
      <toolitem action="ColorSelectionWindow"/>
      <toolitem action="ColorSamplerWindow"/>
      <toolitem action="BrushSelectionWindow"/>
      <toolitem action="LayersWindow"/>
      <toolitem action="ScratchWindow"/>
    </placeholder>
  </toolbar>
</ui>
